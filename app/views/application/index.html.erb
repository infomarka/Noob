<% if @landing_page %>
  <%= form_for @lista_email, :url => create_lista_email_path do |f| %>
    <%=  f.label :email, "E-mail:"  %>
    <%=  f.text_field :email  %><br/><br/>
    <%= f.submit "Enviar" , :class => "ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" %>
  <%  end %>
<% end %>
<%= link_to "Cadastro", new_usuario_registration_path %>
<% if current_usuario %>
  <%= link_to "Logout", logout_path %>
<%  else %>
  <%= link_to "Login", new_usuario_session_path %>
<% end %>

